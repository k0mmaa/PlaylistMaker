<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Текст заголовка -->
    <style name="title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <!-- Текст кнопок -->
    <style name="button_text">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ys_regular_">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Стиль для кнопок на главном экране -->
    <style name="MainMenuButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height_weighted</item>
        <item name="android:layout_weight">@integer/button_weight</item>
        <item name="android:layout_marginStart">@dimen/padding_medium</item>
        <item name="android:layout_marginEnd">@dimen/padding_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textAppearance">@style/button_text</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/yp_black</item>
    </style>



    <!-- стиль для активности Настройки -->
    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_item_height</item>
        <item name="android:background">@color/yp_white</item>
        <item name="android:clipToOutline">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/settings_item_margin_start</item>
    </style>

    <style name="SettingsItemText">
        <item name="android:layout_width">@dimen/textView_layout_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@integer/container_weight</item>
        <item name="android:textAppearance">@style/ys_regular_</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/textview_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/textview_marginBottom</item>
        <item name="android:layout_marginEnd">@dimen/textview_marginEnd</item>
    </style>

    <style name="SettingsIconContainer">
        <item name="android:layout_width">@dimen/liner_icon_width</item>
        <item name="android:layout_height">@dimen/liner_icon_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/liner_icon_marginEnd</item>
    </style>

</resources>