<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/light_mode_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="@color/white">

    <!-- Panel Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/header_padding_horizontal">

        <!-- Кнопка "Назад" слева -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="@dimen/header_button_size"
            android:layout_height="@dimen/header_button_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back_24"/>

        <!-- Заголовок по центру -->
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="@dimen/header_button_size"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/settings"
            android:textAppearance="@style/ys_regular_"
            android:textSize="@dimen/header_text_size"/>

    </LinearLayout>

    <!-- Контейнер для всех пунктов настроек -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="@dimen/settings_item_spacing"
        android:orientation="vertical">

        <!--Dark mode -->
        <RelativeLayout
            android:id="@+id/lists_dark_mode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:clipToOutline="true"
            android:background="@color/white">

            <TextView
                android:id="@+id/dark_mode_tv"
                android:layout_width="@dimen/settings_text_width"
                android:layout_height="@dimen/settings_text_height"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/settings_item_margin_start"
                android:layout_centerVertical="true"
                android:text="@string/dark_mode"
                android:textAppearance="@style/ys_regular_"
                android:gravity="center_vertical"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/dark_mode_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/settings_item_margin_end"/>

        </RelativeLayout>

        <!-- Поделиться приложение -->
        <RelativeLayout
            android:id="@+id/lists_devide_app"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:clipToOutline="true"
            android:background="@color/white">

            <TextView
                android:id="@+id/devide_app_tv"
                android:layout_width="@dimen/settings_text_width"
                android:layout_height="@dimen/settings_text_height"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/settings_item_margin_start"
                android:layout_centerVertical="true"
                android:text="@string/share_app"
                android:textAppearance="@style/ys_regular_"
                android:gravity="center_vertical"/>

            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_share_24"
                android:layout_marginEnd="@dimen/settings_item_margin_end"/>

        </RelativeLayout>

        <!-- Написать в поддержку -->
        <RelativeLayout
            android:id="@+id/lists_user_agr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:clipToOutline="true"
            android:background="@color/white">

            <TextView
                android:id="@+id/support_tv"
                android:layout_width="@dimen/settings_text_width"
                android:layout_height="@dimen/settings_text_height"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/settings_item_margin_start"
                android:layout_centerVertical="true"
                android:text="@string/support"
                android:textAppearance="@style/ys_regular_"
                android:gravity="center_vertical"/>

            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_support_composite_24"
                android:layout_marginEnd="@dimen/settings_item_margin_end"/>

        </RelativeLayout>

        <!-- Пользовательское соглашение -->
        <RelativeLayout
            android:id="@+id/lists"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:clipToOutline="true"
            android:background="@color/white">

            <TextView
                android:id="@+id/user_agr_tv"
                android:layout_width="@dimen/settings_text_width"
                android:layout_height="@dimen/settings_text_height"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/settings_item_margin_start"
                android:layout_centerVertical="true"
                android:text="@string/user_agreement"
                android:textAppearance="@style/ys_regular_"
                android:gravity="center_vertical"/>

            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_forward_24"
                android:layout_marginEnd="@dimen/settings_item_margin_end"/>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>