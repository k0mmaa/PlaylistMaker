<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/light_mode_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="@color/white">

    <!-- Panel Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <!-- Кнопка "Назад" слева -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:textAppearance="@style/ys_regular_"/>

        <!-- Заголовок по центру -->
        <TextView
            android:id="@+id/title"
            android:layout_width="208dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="@string/settings"
            android:textAppearance="@style/ys_regular_"
            android:textSize="22sp" />

    </LinearLayout>


    <!--Dark mode -->
    <RelativeLayout
        android:id="@+id/lists_dark_mode"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:clipToOutline="true"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/dark_mode_tv"
            android:layout_width="300dp"
            android:layout_height="19dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="21dp"
            android:text="@string/dark_mode"
            android:textAppearance="@style/ys_regular_"
            android:gravity="top"
            />

        <RelativeLayout
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp">

            <!-- Фон переключателя (track) -->
            <View
                android:id="@+id/track"
                android:layout_width="32dp"
                android:layout_height="12dp"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_track"
                android:alpha="0.48" />


            <!-- Ползунок (knob) -->
            <View
                android:id="@+id/knob"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_knob"
                android:elevation="3.1dp" />

        </RelativeLayout>
    </RelativeLayout>

    <!-- Поделиться приложение -->
    <RelativeLayout
        android:id="@+id/lists_devide_app"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="141dp"
        android:clipToOutline="true"
        android:background="@color/white">
        <TextView
            android:id="@+id/devide_app_tv"
            android:layout_width="300dp"
            android:layout_height="19dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="21dp"
            android:text="@string/share_app"
            android:textAppearance="@style/ys_regular_"
            android:gravity="top"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_share"
            android:layout_marginEnd="16dp"
            />
    </RelativeLayout>

    <!-- Написать в поддержку -->
    <RelativeLayout
        android:id="@+id/lists_user_agr"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="202dp"
        android:clipToOutline="true"
        android:background="@color/white">
        <TextView
            android:id="@+id/support_tv"
            android:layout_width="300dp"
            android:layout_height="19dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="21dp"
            android:text="@string/support"
            android:textAppearance="@style/ys_regular_"
            android:gravity="top"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_support_composite"
            android:layout_marginEnd="12dp"/>
    </RelativeLayout>

    <!-- Пользовательское соглашение -->
    <RelativeLayout
        android:id="@+id/lists"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="263dp"
        android:clipToOutline="true"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/user_agr_tv"
            android:layout_width="300dp"
            android:layout_height="19dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="21dp"
            android:text="@string/user_agreement"
            android:textAppearance="@style/ys_regular_"
            android:gravity="top"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_forward"
            android:layout_marginEnd="12dp"/>
    </RelativeLayout>
</RelativeLayout>
